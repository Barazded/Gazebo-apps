<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News_aggregator.Pages.ResoursePage"
             Title="Resourses" 
             BackgroundColor="#212121">
    <StackLayout>
        <CollectionView x:Name="collectionView" Margin="10">
            <CollectionView.ItemTemplate >
                <DataTemplate>
                    <StackLayout Orientation="Horizontal">
                        <CheckBox Color="#673AB7" IsChecked="{Binding isChecked}" CheckedChanged="CheckedCheckBox" />
                        <Label Text="{Binding Text}" FontSize="15" TextColor="White" Padding="0,10"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button VerticalOptions="EndAndExpand" Text="APPLY" FontSize="20" CornerRadius="4" Margin="15" TextColor="White" BackgroundColor="#424242" Clicked="OnApplyButtonClicked"/>
    </StackLayout>
</ContentPage>