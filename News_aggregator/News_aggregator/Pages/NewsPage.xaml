<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News_aggregator.Pages.NewsPage"
             Title="News">

    <StackLayout Background="#212121">
        <CollectionView x:Name="collectionResourses"  Margin="5" SelectionMode="Single" SelectionChanged="OnCardClick">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Margin="5">
                        <StackLayout Margin="5" VerticalOptions="FillAndExpand" Background="#323232" >
                            <Label Text="{Binding ID}" FontSize="8" TextColor="WhiteSmoke" Margin="1" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding Title}" FontSize="20" TextColor="WhiteSmoke" Margin="3" />
                            <Label Text="{Binding Info}" FontSize="15" TextColor="WhiteSmoke" Margin="3"/>
                            <Label Text="{Binding Date}" FontSize="10" TextColor="WhiteSmoke" Margin="3"/>
                            <Label Text="{Binding NameResourse}" FontSize="10" TextColor="WhiteSmoke" Margin="3"/>
                        </StackLayout>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>