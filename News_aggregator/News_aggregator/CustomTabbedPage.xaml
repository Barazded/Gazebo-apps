<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News_aggregator.CustomTabbedPage"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
             android:TabbedPage.ToolbarPlacement="Bottom"
             xmlns:pages="clr-namespace:News_aggregator.Pages"
             BarTextColor="White"
             SelectedTabColor="#673AB7"
             UnselectedTabColor="#9E9E9E"
             BarBackgroundColor="#181818">

    <NavigationPage Title="Настройки"  BarBackgroundColor="#111111" BackgroundColor="#111111"  BarTextColor="White" IconImageSource="setting_icon.png" Padding="0,10">
        <x:Arguments>
            <pages:SettingsPage/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Сообщество"  BarBackgroundColor="#111111" BackgroundColor="#111111"  BarTextColor="White" Padding="0,10">
        <x:Arguments>
            <pages:CommunityPage/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Мои новости" BarBackgroundColor="#111111" BackgroundColor="#111111" BarTextColor="White" IconImageSource="note_icon.png" Padding="0,10">
        <x:Arguments>
            <pages:NewsPage/>
        </x:Arguments>
    </NavigationPage>
</TabbedPage>