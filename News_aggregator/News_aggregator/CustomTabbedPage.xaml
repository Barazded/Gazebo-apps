<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="News_aggregator.CustomTabbedPage"
             xmlns:pages="clr-namespace:News_aggregator.Pages"
             BarTextColor="White"
             SelectedTabColor="#673AB7"
             UnselectedTabColor="#9E9E9E">

    <NavigationPage Title="News" BarBackgroundColor="#111111" BarTextColor="White" BackgroundColor="#111111" IconImageSource="note_icon.png" Padding="0,10">
        <x:Arguments>
            <pages:NewsPage/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Settings"   BarBackgroundColor="#111111" BarTextColor="White" BackgroundColor="#111111" IconImageSource="setting_icon.png" Padding="0,10">
        <x:Arguments>
            <pages:SettingsPage/>
        </x:Arguments>
    </NavigationPage>

</TabbedPage>